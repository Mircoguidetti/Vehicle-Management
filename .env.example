# Application
NODE_ENV=development
PORT=3000

# Database - PostgreSQL
DB_TYPE=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=vehicle_management
DB_SYNCHRONIZE=true
DB_LOGGING=true

# TimescaleDB (same as PostgreSQL but different database)
TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_USERNAME=postgres
TIMESCALE_PASSWORD=postgres
TIMESCALE_DATABASE=vehicle_telemetry

# MQTT Broker
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=admin
MQTT_PASSWORD=public
MQTT_CLIENT_ID=vehicle-management-backend

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h

# Vehicle JWT (for MQTT authentication)
VEHICLE_JWT_SECRET=your-vehicle-jwt-secret-key-change-this
VEHICLE_JWT_EXPIRATION=30d
